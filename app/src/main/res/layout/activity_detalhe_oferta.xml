<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetalheOfertaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtv_detalhes_da_oferta"
            android:textSize="24sp"
            android:textStyle="bold"
            />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/img_detalhes_oferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detalhes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/titulo_detalhe_oferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="Titulo"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_detalhes_oferta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtv_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tempo"
        app:layout_constraintTop_toBottomOf="@id/titulo_detalhe_oferta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtv_data"
        />

    <TextView
        android:id="@+id/txtv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="18/08/2021"
        app:layout_constraintTop_toBottomOf="@id/titulo_detalhe_oferta"
        app:layout_constraintStart_toEndOf="@id/txtv_tempo"
        app:layout_constraintEnd_toStartOf="@id/txtv_local"
        />

    <TextView
        android:id="@+id/txtv_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Local"
        app:layout_constraintTop_toBottomOf="@id/titulo_detalhe_oferta"
        app:layout_constraintStart_toEndOf="@id/txtv_data"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/txtv_data"
        app:layout_constraintBottom_toTopOf="@id/txtv_detalhes"
        />

    <TextView
        android:id="@+id/txtv_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Detalhes"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtv_tempo" />

    <TextView
        android:id="@+id/txtv_salario_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="40dp"
        android:text="@string/txt_itemServico_salario"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtv_detalhes"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/txtv_salario_valor_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_itemServico_valorSalario"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/txtv_salario_detalhes"
        app:layout_constraintTop_toTopOf="@id/txtv_salario_detalhes"
        app:layout_constraintBottom_toBottomOf="@id/txtv_salario_detalhes"
        />

    <TextView
        android:id="@+id/txtv_vagas_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:text="@string/txt_itemServico_vagas"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_salario_detalhes" />

    <TextView
        android:id="@+id/txtv_vagas_valor_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/txt_itemServico_valorVagas"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_vagas_detalhes"
        app:layout_constraintStart_toEndOf="@+id/txtv_vagas_detalhes"
        app:layout_constraintTop_toTopOf="@+id/txtv_vagas_detalhes" />

</androidx.constraintlayout.widget.ConstraintLayout>